<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/mediaFragment">
    <action
        android:id="@+id/action_global_to_audioPlayerFragment"
        app:destination="@id/audioPlayerFragment" />
    <action
        android:id="@+id/action_global_to_newPlaylistFragment"
        app:destination="@id/newPlaylistFragment" />
    <action
        android:id="@+id/action_global_to_editPlaylistFragment"
        app:destination="@id/editPlaylistFragment" />
    <action
        android:id="@+id/action_global_to_PlaylistFragment"
        app:destination="@id/playlistFragment" />
    <fragment
        android:id="@+id/searchFragment"
        android:name="com.example.playlistmaker.search.ui.SearchFragment"
        android:label="fragment_search"
        tools:layout="@layout/fragment_search">
        <action
            android:id="@+id/action_searchFragment_to_audioPlayerFragment"
            app:destination="@id/audioPlayerFragment" />
    </fragment>
    <fragment
        android:id="@+id/mediaFragment"
        android:name="com.example.playlistmaker.media.ui.MediaFragment"
        android:label="fragment_media"
        tools:layout="@layout/fragment_media" >
    </fragment>
    <fragment
        android:id="@+id/audioPlayerFragment"
        android:name="com.example.playlistmaker.player.ui.AudioPlayerFragment"
        android:label="fragment_audio_player"
        tools:layout="@layout/fragment_audio_player">
        <argument
            android:name="currentTrack"
            app:argType="com.example.playlistmaker.search.domain.models.Track" />
    </fragment>
    <fragment
        android:id="@+id/settingsFragment"
        android:name="com.example.playlistmaker.settings.ui.SettingsFragment"
        android:label="fragment_settings"
        tools:layout="@layout/fragment_settings" />
    <fragment
        android:id="@+id/newPlaylistFragment"
        android:name="com.example.playlistmaker.media.playlists.new_playlist.ui.NewPlaylistFragment"
        android:label="fragment_new_playlist"
        tools:layout="@layout/fragment_new_playlist" />
    <fragment
        android:id="@+id/editPlaylistFragment"
        android:name="com.example.playlistmaker.media.playlists.edit_playlist.ui.EditPlaylistFragment"
        android:label="fragment_edit_playlist"
        tools:layout="@layout/fragment_new_playlist" >
        <argument
            android:name="playlistId"
            app:argType="integer" />
    </fragment>
    <fragment
        android:id="@+id/playlistFragment"
        android:name="com.example.playlistmaker.media.playlists.playlist.ui.PlaylistFragment"
        android:label="fragment_playlist"
        tools:layout="@layout/fragment_playlist">
        <argument
            android:name="currentPlaylist"
            app:argType="com.example.playlistmaker.media.playlists.new_playlist.domain.models.Playlist" />

    </fragment>
</navigation>