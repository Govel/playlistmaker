<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/title_settings"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        app:title="@string/settings"
        app:navigationIcon="@drawable/arrowback"
        app:titleTextAppearance="@style/SettingsTextStyle"
        app:titleMarginStart="0dp"
        style="@style/Theme.PlaylistMaker"/>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/frame_layout_height_60dp"
        android:layout_marginTop="24dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start|center_vertical"
            android:text="@string/dark_theme"
            style="@style/TextStyle" />

        <Switch
            android:layout_width="56dp"
            android:layout_height="40dp"
            android:layout_gravity="end|center_vertical"
            android:layout_marginEnd="6dp"
            android:enabled="false"
            tools:ignore="UseSwitchCompatOrMaterialXml"
            style="@style/Theme.PlaylistMaker"/>
    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/frame_layout_height_60dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start|center_vertical"
            android:text="@string/share_app"
            style="@style/TextStyle" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/yp_text_gray"
            android:src="@drawable/share"
            android:layout_gravity="end|center_vertical"
            android:layout_marginEnd="@dimen/image_margin_end"
            app:iconTint="@color/yp_text_gray" />
    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/frame_layout_height_60dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start|center_vertical"
            android:text="@string/write_in_support"
            style="@style/TextStyle" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/support"
            android:layout_gravity="end|center_vertical"
            android:layout_marginEnd="@dimen/image_margin_end"
            app:iconTint="@color/yp_text_gray" />
    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/frame_layout_height_60dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start|center_vertical"
            android:text="@string/user_agreement"
            style="@style/TextStyle" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/arrowforward"
            android:layout_gravity="end|center_vertical"
            android:layout_marginEnd="@dimen/image_margin_end"
            app:iconTint="@color/yp_text_gray" />
    </FrameLayout>



</LinearLayout>

