<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rootLayout"
    android:layout_width="match_parent"
    android:layout_height="@dimen/frame_layout_height_60dp"
    android:paddingHorizontal="12dp"
    android:foreground="?attr/selectableItemBackground">

    <ImageView
        android:id="@+id/ivTrackCover"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginHorizontal="8dp"
        android:src="@drawable/placeholder_cover"
        android:layout_marginEnd="8dp"
        android:layout_gravity="center"/>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:layout_weight="1">

        <TextView
            android:id="@+id/tvTrackName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/ys_display_regular"
            android:textColor="@color/colorOnPrimary"
            android:textSize="@dimen/medium_text_size"
            android:autoSizeMinTextSize="@dimen/medium_text_size"
            android:autoSizeTextType="uniform"
            android:maxLines="1"
            android:ellipsize="end"
            tools:text="Smells Like Teen Spirit" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tvTrackBand"
                android:layout_width="wrap_content"
                android:maxWidth="164dp"
                android:layout_height="wrap_content"
                tools:text="Nirvana"
                android:fontFamily="@font/ys_display_regular"
                android:textColor="@color/gray_white"
                android:textSize="@dimen/small_text_size"
                android:autoSizeMinTextSize="@dimen/small_text_size"
                android:layout_gravity="center"
                android:autoSizeTextType="uniform"
                android:maxLines="1"
                android:ellipsize="end" />

            <ImageView
                android:id="@+id/ivTrackDot"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end|center_vertical"
                android:src="@drawable/dot"
                app:iconTint="@color/yp_gray" />

            <TextView
                android:id="@+id/tvTrackTime"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/ys_display_regular"
                android:textColor="@color/gray_white"
                android:textSize="@dimen/small_text_size"
                tools:text="1:55" />
        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:id="@+id/ivTrackForward"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:src="@drawable/arrowforward" />
</LinearLayout>
