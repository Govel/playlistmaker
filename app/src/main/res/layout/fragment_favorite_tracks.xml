<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:visibility="visible">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_favorite_tracks"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone"
        android:layout_marginTop="16dp"
        tools:listitem="@layout/rv_tracks" />

    <ImageView
        android:id="@+id/iv_favorite_empty"
        android:layout_marginTop="104dp"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_gravity="center"
        android:src="@drawable/placeholder_empty_search"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/tv_favorite_empty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/ys_display_medium"
        android:text="@string/media_library_is_empty"
        android:textColor="@color/colorOnPrimary"
        android:textSize="@dimen/large_text_size"
        android:visibility="gone" />

    <ProgressBar
        android:id="@+id/pb_favorite_tracks"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:layout_gravity="center|top"
        android:layout_marginTop="140dp"
        android:indeterminateTint="@color/yp_blue" />



</LinearLayout>