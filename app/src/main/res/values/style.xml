<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="MainTextStyle">
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">@dimen/primary_text_size</item>
        <item name="titleTextColor">@color/yp_white</item>
    </style>

    <style name="HeaderTextStyle">
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">@dimen/primary_text_size</item>
        <item name="titleTextColor">?attr/colorOnPrimary</item>
        <item name="contentInsetStartWithNavigation">64dp</item>
    </style>

    <style name="TextStyle">
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textColor">@color/yp_black</item>
        <item name="android:textSize">@dimen/medium_text_size</item>
        <item name="android:layout_marginStart">@dimen/text_margin_start</item>
    </style>

    <style name="ButtonMainStyle" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="backgroundTint">@color/yp_white</item>
        <item name="android:textColor">@color/yp_black</item>
        <item name="android:textSize">@dimen/primary_text_size</item>
        <item name="fontFamily">@font/ys_display_medium</item>
        <item name="textAllCaps">false</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="iconTint">@color/yp_black</item>
        <item name="iconPadding">@dimen/icon_padding</item>
        <item name="cornerRadius">@dimen/button_corner_radius</item>
        <item name="iconGravity">textStart</item>
        <item name="android:layout_marginHorizontal">16dp</item>
    </style>

    <style name="TrackInfoApi">
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">@dimen/small_text_size</item>
        <item name="android:layout_marginTop">@dimen/text_margin_start</item>
        <item name="layout_constraintEnd_toStartOf">@id/gl_right</item>
        <item name="layout_constraintStart_toEndOf">@id/left_border</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">end</item>
        <item name="android:textColor">@color/colorOnPrimary</item>
    </style>

    <style name="TrackInfo">
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">@dimen/small_text_size</item>
        <item name="android:layout_marginTop">@dimen/text_margin_start</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">end</item>
        <item name="android:textColor">@color/yp_gray</item>
    </style>
    <style name="TabLayout" parent="TextAppearance.Design.Tab">
        <item name="textAllCaps">false</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="BottomNavTextActive">
        <item name="android:textSize">12sp</item>
        <item name="fontFamily">@font/ys_display_medium</item>
        <item name="android:textColor">@color/colorOnPrimary</item>
    </style>
    
    <style name="BottomNavTextInactive">
        <item name="android:textSize">12sp</item>
        <item name="fontFamily">@font/ys_display_medium</item>
        <item name="android:textColor">@color/yp_blue</item>
    </style>

    <style name="TextAppearance.FloatingLabel" parent="TextAppearance.Material3.BodySmall">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/yp_gray</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="CustomEditTextTheme" parent="ThemeOverlay.MaterialComponents.TextInputEditText.OutlinedBox">
        <item name="colorControlActivated">@color/yp_blue</item>
    </style>

    <style name="DialogTheme">
        <item name="buttonBarPositiveButtonStyle">@style/DialogTheme.Button</item>
        <item name="buttonBarNeutralButtonStyle">@style/DialogTheme.Button</item>
        <item name="buttonBarNegativeButtonStyle">@style/DialogTheme.Button</item>
    </style>

    <style name="DialogTheme.Button" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="backgroundTint">@color/transparent_color</item>
        <item name="android:textColor">?attr/colorSecondary</item>
    </style>

    <style name="Button" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:outlineSpotShadowColor">@color/transparent_color</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
    </style>
    <style name="CreatePlaylistButtonTextStyle">
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">16sp</item>
    </style>
</resources>